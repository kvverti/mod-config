{
  "schemaVersion": 1,
  "id": "modconfig",
  "version": "${version}",

  "name": "Mod Config",
  "description": "A simple, global, searchable mod config screen.",
  "authors": [
    "kwerti"
  ],
  "contact": {
    "homepage": "https://github.com/kvverti/mod-config",
    "sources": "https://github.com/kvverti/mod-config"
  },

  "license": "MIT",
  "icon": "assets/modconfig/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "io.github.kvverti.modconfig.ModConfig"
    ]
  },
  "mixins": [
    "modconfig.mixins.json",
    "modconfig.cloth.mixins.json",
    "modconfig.modmenu.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.17.x"
  },
  "suggests": {
    "flamingo": "*"
  }
}
